<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActCon"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:fitsSystemWindows="true"
        android:id="@+id/frmlyout_locationnote_mapholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:id="@+id/map"
            class="com.google.android.gms.maps.MapFragment"
            android:name="com.google.android.gms.maps.MapFragment"
            map:uiCompass="false"
            map:uiRotateGestures="true"
            map:uiTiltGestures="true"
            map:uiZoomControls="false"
            map:uiZoomGestures="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/toolbarCon"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:id="@+id/toolbar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:clickable="true"
                    android:id="@+id/navMenuIcon"
                    android:background="@drawable/ic_action_menu"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="-25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_logo_main"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
            </RelativeLayout>
            <RelativeLayout
                android:visibility="invisible"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchCon"
        android:layout_marginTop="-15dp"
        android:layout_below="@+id/toolbarCon"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:clickable="true"
            android:elevation="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/bg_white_rounded"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/curPlaceSetS"
                    android:background="@drawable/ic_cur_loc_pin"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <LinearLayout
                    android:background="@color/black_overlay"
                    android:layout_weight="1"
                    android:layout_width="1dp"
                    android:layout_height="0dp" />
                <ImageView
                    android:background="@drawable/ic_location_pin"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pickLocCurTV"
                        android:textColor="@color/black_overlay"
                        android:padding="12dp"
                        android:text="Pickup location ?"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/pickLocClearBtn"
                        android:src="@drawable/ic_clear_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:background="@color/black_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pickLocDesTV"
                        android:textColor="@color/black_overlay"
                        android:padding="12dp"
                        android:text="Destination location?"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/desLocClearBtn"
                        android:src="@drawable/ic_clear_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:rotation="90"
                    android:background="@drawable/ic_travel"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBtnCon"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/estCon"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/curLocCont"
            android:animateLayoutChanges="true"
            android:clipToPadding="false"
            android:padding="15dp"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/setCurLocBtn"
                android:clickable="true"
                android:elevation="4dp"
                android:background="@drawable/circle_white_img"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/ic_cur_loc_pin"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/sendBtn"
                android:clickable="true"
                android:padding="15dp"
                android:background="@color/colorAccent"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="Send Parcel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/estCon"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:elevation="14dp"
            android:padding="15dp"
            android:clipToPadding="false"
            android:background="@color/colorFontLight"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/estDistance"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Est. Distance 12KM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/estTime"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Est. Time 30 mins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/typeContPar"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:clickable="true"
                    android:tag="Bike"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/circle_img_rev_border"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="3dp"
                            android:background="@drawable/circle_img_rev"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/bike"
                                android:layout_width="60dp"
                                android:layout_height="60dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:textSize="12sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Bike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:clickable="true"
                    android:tag="Car"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="3dp"
                            android:background="@drawable/circle_img_rev"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/car"
                                android:layout_width="60dp"
                                android:layout_height="60dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:textSize="12sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:clickable="true"
                    android:tag="Pickup"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="3dp"
                            android:background="@drawable/circle_img_rev"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/van"
                                android:layout_width="60dp"
                                android:layout_height="60dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:textSize="12sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Pickup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:clickable="true"
                    android:tag="Truck"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="3dp"
                            android:background="@drawable/circle_img_rev"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/truck"
                                android:layout_width="60dp"
                                android:layout_height="60dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:textSize="12sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Truck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sendReqBtn"
                android:clickable="true"
                android:elevation="2dp"
                android:padding="15dp"
                android:background="@drawable/bg_acc_rounded"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="Send Request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/curPinMovable"
        android:src="@drawable/ic_move_pin"
        android:layout_above="@+id/centerMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/centerMap"
        android:layout_marginTop="-1dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal" />
</RelativeLayout>